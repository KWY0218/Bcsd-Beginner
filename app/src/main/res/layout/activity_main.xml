<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/main_sec_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="@string/main_zero"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/main_div1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_div1"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/main_sec_tv"
        app:layout_constraintStart_toEndOf="@+id/main_sec_tv"
        app:layout_constraintTop_toTopOf="@+id/main_sec_tv" />

    <TextView
        android:id="@+id/main_div2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_div2"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/main_sec_tv"
        app:layout_constraintEnd_toStartOf="@+id/main_sec_tv"
        app:layout_constraintTop_toTopOf="@+id/main_sec_tv" />

    <TextView
        android:id="@+id/main_milli_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_zero"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/main_sec_tv"
        app:layout_constraintStart_toEndOf="@+id/main_div1"
        app:layout_constraintTop_toTopOf="@+id/main_sec_tv"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/main_min_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_zero"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/main_sec_tv"
        app:layout_constraintEnd_toStartOf="@+id/main_div2"
        app:layout_constraintTop_toTopOf="@+id/main_sec_tv"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/main_start_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:text="@string/main_start"
        app:layout_constraintBottom_toBottomOf="@+id/main_stop_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/main_stop_btn" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/main_stop_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="@string/main_stop"
        app:layout_constraintEnd_toStartOf="@+id/main_lap_btn"
        app:layout_constraintStart_toEndOf="@+id/main_start_btn"
        app:layout_constraintTop_toBottomOf="@+id/main_sec_tv" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/main_lap_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:text="@string/main_lap"
        app:layout_constraintBottom_toBottomOf="@+id/main_stop_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/main_stop_btn" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/main_lap_rv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="25dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_stop_btn" />

</androidx.constraintlayout.widget.ConstraintLayout>